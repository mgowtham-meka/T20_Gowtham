<h1 class="display-1">Players</h1>
<a class="btn btn-primary" href="<%= new_player_path %>">New Player</a>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Age</th>
      <th scope="col">Position</th>
      <th scope="col">Team</th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.age %></td>
        <td><%= player.position %></td>
        <td><%= player.team.name %></td>
        <td><a class="btn btn-secondary" href="<%= player_path(player) %>">Show</a></td>
        <td><a class="btn btn-primary" href="<%= edit_player_path(player) %>">Edit</a></td>
        <td><a class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirm-delete-modal-<%= player.id %>">Destroy</a>
          <!-- Modal -->
          <div class="modal fade" id="confirm-delete-modal-<%= player.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Confirm Delete</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  Are you sure you want to delete <%= player.name %>?
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                  <%= link_to 'Destroy', player_path(player), method: :delete, class: "btn btn-danger" %>
                </div>
              </div>
            </div>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>