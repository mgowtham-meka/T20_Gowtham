<h1>Teams</h1>

<%= link_to 'New Team', new_team_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      
    </tr>
  </thead>
  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td>
          <%= link_to 'Show', team_path(team) %> |
          <%= link_to 'Edit', edit_team_path(team) %> |
          <%= link_to 'Destroy', team_path(team), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
