<h1>Team Details</h1>
<p>
  <strong>Name:</strong>
  <%= @team.name %>
</p>
<p>
  <strong>Country:</strong>
  <%= @team.country %>
</p>

<h2>Players</h2>
<ul>
  <% @team.players.each do |player| %>
    <li>
      <strong>Name:</strong> <%= player.name %>, 
      <strong>Age:</strong> <%= player.age %>, 
      <strong>Position:</strong> <%= player.position %>
    </li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_team_path(@team) %> |
<%= link_to 'Back', teams_path %>
